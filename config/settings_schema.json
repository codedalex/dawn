// config/settings_schema.json

[

  // layout settings
  {
    "name": "Layout Settings",
    "settings": [
      {
        "type": "header",
        "content": "RTL Settings"
      },
      {
        "type": "checkbox",
        "id": "enable_rtl_toggle",
        "label": "Enable RTL Toggle",
        "default": true
      },
      {
        "type": "header",
        "content": "Preloader Settings"
      },
      {
        "type": "checkbox",
        "id": "enable_preloader",
        "label": "Enable Preloader",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "preloader_logo",
        "label": "Preloader Logo"
      },
      {
        "type": "range",
        "id": "preloader_duration",
        "min": 500,
        "max": 3000,
        "step": 100,
        "unit": "ms",
        "label": "Preloader Duration",
        "default": 1000
      }
    ]
  },

  // Theme Information
  {
    "name": "Theme Information",
    "settings": [
      {
        "type": "header",
        "content": "Brand Identity"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Will be scaled down to 32 x 32px"
      },
      {
        "type": "image_picker",
        "id": "apple_touch_icon",
        "label": "Apple Touch Icon",
        "info": "180 x 180px recommended"
      }
    ]
  },

  // colors
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Brand Colors"
      },
      {
        "type": "color",
        "id": "colors_primary",
        "label": "Primary Color",
        "default": "#032b3a"
      },
      {
        "type": "color",
        "id": "colors_secondary",
        "label": "Secondary Color",
        "default": "#115c78"
      },
      {
        "type": "color",
        "id": "colors_tertiary",
        "label": "Tertiary Color",
        "default": "#217a9c"
      },
      {
        "type": "header",
        "content": "Background Colors"
      },
      {
        "type": "color",
        "id": "colors_background_1",
        "label": "Background",
        "default": "#f4f9fb"
      },
      {
        "type": "color_background",
        "id": "colors_background_2",
        "label": "Secondary Background",
        "default": "linear-gradient(180deg, rgba(244, 249, 251, 1), rgba(232, 236, 238, 1))"
      },
      {
        "type": "header",
        "content": "Text Colors"
      },
      {
        "type": "color",
        "id": "colors_text",
        "label": "Text",
        "default": "#083445"
      },
      {
        "type": "color",
        "id": "colors_heading",
        "label": "Headings",
        "default": "#032b3a"
      },
      {
        "type": "color",
        "id": "colors_link",
        "label": "Links",
        "default": "#115c78"
      },
      {
        "type": "color",
        "id": "colors_link_hover",
        "label": "Link Hover",
        "default": "#217a9c"
      },
      {
        "type": "header",
        "content": "Button Colors"
      },
      {
        "type": "color",
        "id": "colors_button",
        "label": "Button Background",
        "default": "#032b3a"
      },
      {
        "type": "color",
        "id": "colors_button_text",
        "label": "Button Text",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "colors_button_hover",
        "label": "Button Hover Background",
        "default": "#115c78"
      },
      {
        "type": "color",
        "id": "colors_button_hover_text",
        "label": "Button Hover Text",
        "default": "#ffffff"
      },
      {
        "type": "header",
        "content": "Status Colors"
      },
      {
        "type": "color",
        "id": "colors_error",
        "label": "Error",
        "default": "#D32F2F"
      },
      {
        "type": "color",
        "id": "colors_success",
        "label": "Success",
        "default": "#2E7D32"
      },
      {
        "type": "color",
        "id": "colors_warning",
        "label": "Warning",
        "default": "#ED6C02"
      },
      {
        "type": "color",
        "id": "colors_info",
        "label": "Information",
        "default": "#0288D1"
      },
      {
        "type": "header",
        "content": "Border Colors"
      },
      {
        "type": "color",
        "id": "colors_border",
        "label": "Borders",
        "default": "#e8ecee"
      },
      {
        "type": "color",
        "id": "colors_border_hover",
        "label": "Border Hover",
        "default": "#115c78"
      }
    ]
  },

  // typography
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "label": "Font",
        "default": "helvetica_n4"
      },
      {
        "type": "range",
        "id": "type_header_scale",
        "label": "Size scale",
        "default": 100,
        "min": 90,
        "max": 150,
        "step": 5,
        "unit": "%"
      },
      {
        "type": "header",
        "content": "Body text"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "label": "Font",
        "default": "helvetica_n4"
      },
      {
        "type": "range",
        "id": "type_body_scale",
        "label": "Size scale",
        "default": 100,
        "min": 90,
        "max": 130,
        "step": 5,
        "unit": "%"
      }
    ]
  },

  // contact information
  {
    "name": "Contact Information",
    "settings": [
      {
        "type": "header",
        "content": "Contact Details"
      },
      {
        "type": "text",
        "id": "phone_number",
        "label": "Phone Number",
        "default": "(+333) 123-1688"
      },
      {
        "type": "text",
        "id": "email",
        "label": "Email Address",
        "default": "sayhello@summit.com"
      }
    ]
  },

  // Social Media
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Links"
      },
      {
        "type": "url",
        "id": "social_twitter_link",
        "label": "Twitter",
        "info": "https://twitter.com/youraccount"
      },
      {
        "type": "url",
        "id": "social_facebook_link",
        "label": "Facebook",
        "info": "https://facebook.com/youraccount"
      },
      {
        "type": "url",
        "id": "social_instagram_link",
        "label": "Instagram",
        "info": "https://instagram.com/youraccount"
      },
    ]
  },

  
]