{% comment %}
    Renders meta tags for SEO and social sharing
    Usage:
    {% render 'meta-tags' %}
{% endcomment %}

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

<title>
  {{ page_title }}{% if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; Page {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
</title>

{% if page_description %}
  <meta name="description" content="{{ page_description | escape }}">
{% endif %}

<!-- Favicon and Touch Icons -->
{% if settings.favicon != blank %}
  <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32 }}" sizes="32x32">
  <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 16 }}" sizes="16x16">
{% endif %}

{% if settings.apple_touch_icon != blank %}
  <link rel="apple-touch-icon" href="{{ settings.apple_touch_icon | image_url: width: 180 }}">
  <link rel="apple-touch-icon-precomposed" href="{{ settings.apple_touch_icon | image_url: width: 180 }}">
{% endif %}

<!-- Theme Color for Mobile Browsers -->
<meta name="theme-color" content="{{ settings.theme_color | default: '#000000' }}">

<!-- Windows Tile -->
<meta name="msapplication-TileImage" content="{{ settings.favicon | image_url: width: 144 }}">
<meta name="msapplication-TileColor" content="{{ settings.theme_color | default: '#000000' }}">

<!-- Social Sharing Meta Tags -->
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ canonical_url }}">
<meta property="og:title" content="{{ page_title }}">
<meta property="og:type" content="website">
<meta property="og:description" content="{{ page_description | escape }}">

{% if page_image %}
  <meta property="og:image" content="http:{{ page_image | image_url: width: 1200 }}">
  <meta property="og:image:secure_url" content="https:{{ page_image | image_url: width: 1200 }}">
{% endif %}

<!-- Twitter Card Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ page_title }}">
<meta name="twitter:description" content="{{ page_description | escape }}">

<!-- Canonical URL -->
<link rel="canonical" href="{{ canonical_url }}">