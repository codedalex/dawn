<!DOCTYPE html>
  <html xmlns="http://www.w3.org/1999/xhtml" xml:lang="{{ request.locale.iso_code }}" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <!-- Render meta tags snippet -->
    {% render 'meta-tags' %}
    
    <!-- Preloaded Stylesheets -->
    {{ 'fonts.css' | asset_url | stylesheet_tag }}
    {{ 'font-icons.css' | asset_url | stylesheet_tag }}
    {{ 'bootstrap.min.css' | asset_url | stylesheet_tag }}
    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
    {{ 'animate.css' | asset_url | stylesheet_tag }}
    {{ 'drift-basic.min.css' | asset_url | stylesheet_tag }}
    {{ 'photoswipe.css' | asset_url | stylesheet_tag }}
    {{ 'styles.css' | asset_url | stylesheet_tag }}
    {{ 'theme.css' | asset_url | stylesheet_tag }}
  
    <!-- Header hook for plugins -->
    {{ content_for_header }}
  </head>
  
  <body class="{% if settings.enable_preloader %}preload-wrapper{% endif %} color-primary-3">
    {% comment %}RTL Button{% endcomment %}
    {% render 'rtl-toggle' %}
  
    {% comment %}Preloader{% endcomment %}
    {% render 'preloader' %}
  
    <div id="wrapper">
      {% comment %}Announcement Bar{% endcomment %}
      {% section 'announcement-bar' %}
  
      {% comment %}Header{% endcomment %}
      {% section 'header' %}
  
      {% comment %}Main Content{% endcomment %}
      <main role="main" id="MainContent">
        {{ content_for_layout }}
      </main>
  
      {% comment %}Footer{% endcomment %}
      {% section 'footer' %}
    </div>
  
    {% comment %}JavaScript Files{% endcomment %}
    <script src="{{ 'jquery.min.js' | asset_url }}" defer></script>
    <script src="{{ 'bootstrap.min.js' | asset_url }}" defer></script>
    <script src="{{ 'swiper-bundle.min.js' | asset_url }}" defer></script>
    <script src="{{ 'carousel.js' | asset_url }}" defer></script>
    <script src="{{ 'lazysize.min.js' | asset_url }}" defer></script>
    <script src="{{ 'count-down.js' | asset_url }}" defer></script>
    <script src="{{ 'wow.min.js' | asset_url }}" defer></script>
    <script src="{{ 'multiple-modal.js' | asset_url }}" defer></script>
    <script src="{{ 'main.js' | asset_url }}" defer></script>
  

  </body>
  </html>